<AuthorizeView>
    <Authorized>
        <a href="Identity/Account/Manage">Hello, @context.User.Identity?.Name!</a>
        <form method="post" action="Identity/Account/Logout">
            <button type="submit" class="nav-link btn btn-link">Log out</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a href="Identity/Account/Register">Register</a>
        <a href="Identity/Account/Login">Log in</a>
        <div class="oauth-buttons" style="margin-top: 10px;">
            <a href="signin-google" class="btn btn-outline-dark" style="margin-right: 5px;">
                <i class="fab fa-google"></i> Sign in with Google
            </a>
            <a href="signin-microsoft" class="btn btn-outline-primary">
                <i class="fab fa-microsoft"></i> Sign in with Microsoft
            </a>
        </div>
    </NotAuthorized>
</AuthorizeView>
